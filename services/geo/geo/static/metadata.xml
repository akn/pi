<service name="Geo" url="http://127.0.0.1:5001/">
    <description>Este serviço guarda informação sobre espaços e as suas coordenadas</description>
    <supported_formats>
        <format>xml</format>
    </supported_formats>

    <resource url="">
        <keywords>
            <keyword>departamento</keyword>
            <keyword>dep</keyword>
            <keyword>sala</keyword>
            <keyword>gabinete</keyword>
            <keyword>edificio</keyword>
            <keyword>ed</keyword>
            <keyword>pavilhao</keyword>
        </keywords>
        <method type="GET" >
            <parameter>query</parameter> 
        </method>
        <resource url="espacos" type="static">
            <method type="GET" >
                <parameter>start</parameter>
                <parameter>end</parameter> 
            </method>
            <resource url="espaco_id" type="dynamic">
                <method type="GET">
                </method>
            </resource>
        </resource>
    </resource>
</service>
